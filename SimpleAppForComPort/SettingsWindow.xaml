<Window x:Class="SimpleAppForComPort.SettingsWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Настройки" Height="300" Width="400" WindowStartupLocation="CenterOwner">
    <Grid Margin="10">
        <Grid.RowDefinitions>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="*"/>
        </Grid.ColumnDefinitions>

        <StackPanel>
            <TextBlock Text="Время раунда (сек)"/>
            <TextBox x:Name="TextRoundTime" Margin="0,4,0,8"/>

            <TextBlock Text="Время блокировки (сек)"/>
            <TextBox x:Name="TextLockTime" Margin="0,4,0,8"/>

            <CheckBox x:Name="CheckBlockAfterRound" Content="Блокировка после раунда" Margin="0,0,0,8"/>

            <TextBlock Text="Код режима A (символ)"/>
            <TextBox x:Name="TextModeA" Margin="0,4,0,8"/>

            <TextBlock Text="Код режима B (символ)"/>
            <TextBox x:Name="TextModeB" Margin="0,4,0,8"/>
        </StackPanel>

        <StackPanel Grid.Row="1" Orientation="Horizontal" HorizontalAlignment="Right">
            <Button Content="Сохранить" Margin="0,0,8,0" Click="OnSaveClick"/>
            <Button Content="Отмена" Click="OnCancelClick"/>
        </StackPanel>
    </Grid>
</Window>